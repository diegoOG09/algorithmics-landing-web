---
import MenuView from "./MenuView.astro";
import MenuItemView from '../components/menuItemView.astro';
import menuItems from '../data/MenuItems';
---

<header>
  <div class="header-content container">
    <div class="logo-content">
      <a class="logo" href="/">
        <img src="/assets/logo_header.svg" alt="Logo">
      </a>
      <span>Escuela internacional <br> de programaci√≥n</span>
    </div>
    
    <MenuView >
      {
        menuItems.map(item => <MenuItemView {...item} />)
      }
    </MenuView>
  </div>
</header>

<style lang="scss">
  header {
    width: 100%;
    .header-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding-top: 2rem;

      .logo-content {
        display: flex;
        flex-direction: column;
        span {
          font-size: .8rem;
          color: rgb(197, 197, 197);
        }
      }
    }
  }
  @media only screen and (max-width: 428px) {
    header {
      .header-content {
        align-items: start;
        flex-direction: column;
        gap: 2rem;
      }
    }
  }
</style>